<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClassToksV2.Views.WaitingView"
             Visual="Material">
  <ContentView.Content>
        <Frame HasShadow="False" Opacity="0.5" CornerRadius="15" BackgroundColor="Black">
            <StackLayout VerticalOptions="Center" Spacing="10">
                <Label Text="Please wait..." TextColor="White" HorizontalTextAlignment="Center"/>
                <ActivityIndicator IsRunning="True" Color="White" Scale="2"/>
            </StackLayout>
        </Frame>
  </ContentView.Content>
</ContentView>