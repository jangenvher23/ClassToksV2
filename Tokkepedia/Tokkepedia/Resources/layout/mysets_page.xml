
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">
    <!--ToolBar-->
    <LinearLayout
        android:id="@+id/LinearSetsToolbar"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/primary">
        <TextView
            android:id="@+id/btnMySetsCancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Cancel"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:textColor="@android:color/white"/>
        <TextView
            android:id="@+id/txtTotalToksSelected"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="17sp"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@android:color/white"/>
        <TextView
            android:id="@+id/btnMySetsAdd"
            android:background="?attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="+Add Set"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtMySetsPageNoSets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone"
                android:text="Click '+ Add Set' to add a set"
                android:textSize="16sp"
                android:padding="5dp"
                android:textColor="@color/secondary_text"/>
            <TextView
                android:id="@+id/txtMySetsPageTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:visibility="gone"
                android:padding="15dp"
                android:textColor="@android:color/black"/>
        </LinearLayout>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabMySets"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            app:layout_scrollFlags="scroll|enterAlways"
            app:tabGravity="fill"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/colorAccent"
            app:tabTextColor="@android:color/black"
            app:tabTextAppearance="@style/MyCustomTabText13"/>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpagerMySets"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <!--Progress-->
    <LinearLayout
        android:id="@+id/linear_mysetsprogress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_anchorGravity="center|top"
            app:layout_anchor="@+id/txtEmail"
            android:layout_centerInParent="true"
            android:backgroundTint="#80000000"
            android:background="@drawable/tileview_layout">
            <TextView
                android:id="@+id/progressBarTextMySets"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Loading..."
                 android:textSize="15sp"
                 android:textStyle="bold"
                 android:textColor="@android:color/white"
                 android:gravity="center"
                 android:padding="5dp"/>
            <ProgressBar
                android:id="@+id/progressbarMySets"
                android:theme="@style/CircularProgress"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_height="86dp"
                android:layout_width="86dp"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:padding="5dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>