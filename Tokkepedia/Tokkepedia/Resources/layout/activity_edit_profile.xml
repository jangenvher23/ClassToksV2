<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:rowCount="4"
        android:columnCount="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_row="0"
            android:layout_column="0">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Display Name"
                    android:textSize="16sp"
                    android:padding="10dp"/>
                 <Button
                    android:id="@+id/btnUpdateDisplayName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_alignParentRight="true"
                    android:text="Update"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/colorAccent"
                    android:textColor="@color/WHITE"/>
            </RelativeLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:hintEnabled="false"
                app:counterEnabled="true"
                app:counterMaxLength="25">
                <EditText
                    android:id="@+id/txtDisplayname"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:maxLength="25"
                    android:textColor = "@android:color/black"
                    android:background="@drawable/rounded_edittext_white_bg"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_row="1"
            android:layout_column="0">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Bio"
                    android:textSize="16sp"
                    android:padding="10dp"/>
                 <Button
                    android:id="@+id/btnBio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_alignParentRight="true"
                    android:text="Update"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/colorAccent"
                    android:textColor="@color/WHITE"/>
            </RelativeLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:hintEnabled="false"
                app:counterEnabled="true"
                app:counterMaxLength="160">
                <EditText
                    android:id="@+id/txtBio"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:maxLength="160"
                    android:textColor = "@android:color/black"
                    android:background="@drawable/rounded_edittext_white_bg"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_row="2"
            android:layout_column="0">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Web"
                    android:textSize="16sp"
                    android:padding="10dp"/>
                 <Button
                    android:id="@+id/btnWeb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_alignParentRight="true"
                    android:text="Update"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/colorAccent"
                    android:textColor="@color/WHITE"/>
            </RelativeLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:hintEnabled="false"
                app:counterEnabled="true"
                app:counterMaxLength="100">
                <EditText
                    android:id="@+id/txtWeb"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:maxLength="100"
                    android:textColor = "@android:color/black"
                    android:background="@drawable/rounded_edittext_white_bg"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </GridLayout>

    <LinearLayout
        android:id="@+id/linearProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_anchorGravity="center|top"
        app:layout_anchor="@+id/txtEmail"
        android:layout_centerInParent="true"
        android:backgroundTint="#80000000"
        android:background="@drawable/tileview_layout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Updating..."
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:padding="5dp"/>
        <ProgressBar
            android:id="@+id/progressCircle"
            android:theme="@style/CircularProgressBlue"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_height="86dp"
            android:layout_width="86dp"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:padding="5dp"/>
    </LinearLayout>
</RelativeLayout>
