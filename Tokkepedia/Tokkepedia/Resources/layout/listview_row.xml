<GridLayout 
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:layout_centerInParent="true"
    android:paddingStart="@dimen/padding_10"
    android:paddingEnd="@dimen/padding_10"
    android:paddingTop="3dp"
    android:paddingBottom="3dp">
    <!--Tok Image-->
    <GridLayout
        android:id="@+id/gridTokImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:paddingTop="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="5dp"
        android:layout_column="0"
        android:layout_row="0"
        android:rowCount="6"
        android:numColumns="3">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/lbl_Imgnameuser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"/>
                <TextView
                    android:id="@+id/lbl_royaltitleImg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="@dimen/abc_text_size_small_material"/>
                <ImageView
                    android:id="@+id/imgtile_stickerimageImg"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"/>
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_columnSpan="2"
                android:layout_gravity="center_horizontal|fill_horizontal"
                android:layout_centerInParent="true"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="24dp"
                    android:layout_centerHorizontal="true"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    android:thicknessRatio="1.9"
                    android:layout_gravity="left">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:id="@+id/imageTokImgUserPhoto"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:scaleType="fitXY"/>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <ImageView
                android:layout_width="48dp"
                android:layout_height="36dp"
                android:id="@+id/img_tokimgFlag"
                android:scaleType="fitXY"
                android:layout_gravity="right"/>
        </FrameLayout>
        <TextView
            android:id="@+id/lbl_tokimgprimarytext"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:text="Title"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="18dp"
            android:textStyle="bold"/>
         <TextView
            android:id="@+id/lbl_tokimgsecondarytext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:text="Quote: Secondary Text"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="13dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/imgTokImgMain"
            android:scaleType="fitCenter"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="2"/>
       <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal|fill_horizontal"
            android:orientation="horizontal"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="2">
            <TextView
                android:id="@+id/lblTokImgCategory"
                android:layout_width="wrap_content"
                android:maxWidth="150dp"
                android:layout_height="wrap_content"
                android:text="BOTTOM"
                android:maxLines="1"
                android:ellipsize="end"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="left|bottom"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"/>
            <ImageView
                android:id="@+id/toktile_imgpurplegemtokimg"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/purple_gem"
                android:scaleType="fitEnd"
                android:layout_centerInParent="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true">
                <TextView
                    android:id="@+id/lblTokImgGroup"
                    android:layout_width="wrap_content"
                    android:maxWidth="150dp"
                    android:layout_height="wrap_content"
                    android:text="BOTTOM"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text=" - "/>
                <TextView
                    android:id="@+id/lblTokImgType"
                    android:layout_width="wrap_content"
                    android:maxWidth="150dp"
                    android:layout_height="wrap_content"
                    android:text="BOTTOM"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"/>
            </LinearLayout>
        </RelativeLayout>
    </GridLayout>
    <!--Toks 2-->
    <GridLayout
        android:id="@+id/gridBackground"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:paddingTop="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_column="0"
        android:layout_row="0"
        android:rowCount="4"
        android:numColumns="3">
        <!--Row 1-->
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:gravity="center"
            android:layout_gravity="center_horizontal|fill_horizontal"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lbl_nameuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/lbl_royaltitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="@dimen/abc_text_size_small_material"
                android:textColor="@android:color/white"/>
            <ImageView
                android:id="@+id/imgtile_stickerimage"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"/>
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_row="0"
            android:layout_column="0"
            app:cardCornerRadius="24dp"
            android:layout_centerHorizontal="true"
            android:innerRadius="0dp"
            android:shape="ring"
            android:clickable="true"
            android:thicknessRatio="1.9">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/imageUserPhoto"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scaleType="fitXY"/>
        </android.support.v7.widget.CardView>
        <ImageView
            android:layout_width="48dp"
            android:layout_height="36dp"
            android:id="@+id/imageFlag"
            android:layout_row="0"
            android:layout_column="2"
            android:scaleType="fitXY"/>
        <!--Row 1-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal|center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lbl_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/secondarytext_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:visibility="gone"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/lbl_englishPrimaryFieldText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>
            <ImageView
                android:visibility="gone"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:adjustViewBounds="true"
                android:id="@+id/toktile_imgpurplegem"
                android:src="@drawable/purple_gem"
                android:scaleType="centerCrop"/>
        </LinearLayout>
        <!--Row 2-->
        <RelativeLayout
            android:layout_width="@dimen/abc_dialog_fixed_height_minor"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_marginBottom="6dp"
            android:layout_gravity="center_horizontal|fill_horizontal"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lblCategory"
                android:layout_width="wrap_content"
                android:maxWidth="150dp"
                android:layout_height="wrap_content"
                android:text="BOTTOM"
                android:maxLines="1"
                android:ellipsize="end"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="left"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:textColor="@android:color/white"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true">
                <TextView
                    android:id="@+id/lblTokGroup"
                    android:layout_width="wrap_content"
                    android:maxWidth="150dp"
                    android:layout_height="wrap_content"
                    android:text="BOTTOM"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text=" - "
                    android:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/lblTokType"
                    android:layout_width="wrap_content"
                    android:maxWidth="150dp"
                    android:layout_height="wrap_content"
                    android:text="BOTTOM"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </RelativeLayout>
    </GridLayout> 
</GridLayout>