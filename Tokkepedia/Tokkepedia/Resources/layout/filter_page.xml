<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:p4="http://xamarin.com/mono/android/designer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:paddingTop="20dp"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:paddingBottom="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="30dp">
        <!--TITLE 1-->
        <LinearLayout
            android:id="@+id/LinearFeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#020104"
                android:text="Feed"                
                android:textStyle="bold"
                android:textSize="20sp"/>
            <Button
                android:id="@+id/btnGlobalToks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary_dark"
                android:text="Global Toks"
                android:tag="9"
                android:inputType="textCapCharacters"
                android:textSize="15sp"
                android:textColor="@android:color/white"/>
            <Button
                android:id="@+id/btnFeaturedToks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary_dark"
                android:text="Featured Toks"
                android:tag="7"
                android:inputType="textCapCharacters"
                android:textSize="15sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>
        <!--Filter By-->
        <LinearLayout
            android:id="@+id/LinearFilterBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#020104"
                android:text="Filter By"                
                android:textStyle="bold"
                android:textSize="20sp"/>
            <Button
                android:id="@+id/btnFilterByAll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:text="All"
                android:inputType="textCapCharacters"
                android:textSize="15sp"
                android:textColor="@android:color/white"/>
            <Button
                android:id="@+id/btnClass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:text="Class Name"
                android:inputType="textCapCharacters"
                android:textSize="15sp"
                android:textColor="@android:color/white"/>
            <Button
                android:id="@+id/btnCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:text="Category"
                android:inputType="textCapCharacters"
                android:textSize="15sp"
                android:textColor="@android:color/white"/>
            <Button
                android:id="@+id/btnType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:text="Type"
                android:inputType="textCapCharacters"
                android:textSize="15sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>
        <!--TITLE 2-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#020104"
            android:text="View As"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/btnFilterToks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_dark"
            android:text="Toks"
            android:inputType="textCapCharacters"
            android:textSize="15sp"
            android:textColor="@android:color/white"/>
        <Button
            android:id="@+id/btnFilterCards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_dark"
            android:text="Cards"
            android:inputType="textCapCharacters"
            android:textSize="15sp"
            android:textColor="@android:color/white"/>


        <!--View as Class Groups -->
        <LinearLayout
            android:id="@+id/linearGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#020104"
                android:text="Group"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <Button
                android:id="@+id/btnFilterMyGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary_dark"
                android:text="My Groups"
                android:inputType="textCapCharacters"
                android:textSize="15sp"
                android:textColor="@android:color/white"/>
            <Button
                android:id="@+id/btnFilterJoinedGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary_dark"
                android:text="Joined Groups"
                android:inputType="textCapCharacters"
                android:textSize="15sp"
                android:textColor="@android:color/white"/>
            <Button
                android:id="@+id/btnFilterOwnedGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary_dark"
                android:text="Owned Groups"
                android:inputType="textCapCharacters"
                android:textSize="15sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <!--Sort By-->
        <LinearLayout
            android:id="@+id/linearSortBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#020104"
                android:text="Sort By"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <Button
                android:id="@+id/btnFilterStandard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary_dark"
                android:text="Standard"
                android:inputType="textCapCharacters"
                android:textSize="15sp"
                android:textColor="@android:color/white"/>
            <Button
                android:id="@+id/btnRecent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary_dark"
                android:text="Recent"
                android:inputType="textCapCharacters"
                android:textSize="15sp"
                android:textColor="@android:color/white"/>
            <Button
                android:id="@+id/btnTopToks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary_dark"
                android:text="Top Toks"
                android:tag="0"
                android:inputType="textCapCharacters"
                android:textSize="15sp"
                android:textColor="@android:color/white"/>

        </LinearLayout>
        
        <!--Image-->
        <LinearLayout
            android:id="@+id/linearImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#020104"
                android:text="Image"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <Button
                android:id="@+id/btnFilterImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary_dark"
                android:text="Image"
                android:inputType="textCapCharacters"
                android:textSize="15sp"
                android:textColor="@android:color/white"/>
            <Button
                android:id="@+id/btnFilterNoImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary_dark"
                android:text="No Image"
                android:inputType="textCapCharacters"
                android:textSize="15sp"
                android:textColor="@android:color/white"/>
            <Button
                android:id="@+id/btnFilterBoth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary_dark"
                android:text="Both"
                android:inputType="textCapCharacters"
                android:textSize="15sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>
        
        <!--TITLE 4-->
        <LinearLayout
            android:id="@+id/linearPlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#020104"
                android:text="Play"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <Button
                android:id="@+id/btnFilterSets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary_dark"
                android:text="Sets"
                android:inputType="textCapCharacters"
                android:textSize="15sp"
                android:textColor="@android:color/white"/>
            <Button
                android:id="@+id/btnFilterTokCards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary_dark"
                android:text="Tok Cards"
                android:inputType="textCapCharacters"
                android:textSize="15sp"
                android:textColor="@android:color/white"/>
            <Button
                android:id="@+id/btnFilterTokMatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary_dark"
                android:text="Tok Match"
                android:inputType="textCapCharacters"
                android:textSize="15sp"
                android:textColor="@android:color/white"/>
            <Button
                android:id="@+id/btnFilterTokChoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary_dark"
                android:text="Tok Choice"
                android:inputType="textCapCharacters"
                android:textSize="15sp"
                android:textColor="@android:color/white"/>

        </LinearLayout>
       
    </LinearLayout>
</androidx.core.widget.NestedScrollView>