<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <com.google.android.flexbox.FlexboxLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		app:flexWrap="nowrap"
        app:alignItems="center"
        app:alignContent="center"
        app:justifyContent="center"
        app:layout_flexBasisPercent="100%">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            app:layout_flexBasisPercent="80%">
            <android.support.v7.widget.CardView
                android:layout_width="38dp"
                android:layout_height="38dp"
                app:cardCornerRadius="24dp"
                android:innerRadius="0dp"
                android:shape="ring"
                android:layout_gravity="left|center"
                android:clickable="true"
                android:thicknessRatio="1.9"
                app:layout_flexBasisPercent="7%">
                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:id="@+id/ImgInviteUserphoto"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scaleType="fitXY"/>
            </android.support.v7.widget.CardView>
            <TextView
                android:id="@+id/TextInviteUserName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:textSize="12sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:textColor="@android:color/black"
                app:layout_flexBasisPercent="50%"/>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_flexBasisPercent="20%">
            <Button
                android:id="@+id/BtnSubmitInvite"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Invite"
                android:onClick="OnClickBtnInvite"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:backgroundTint="@color/colorAccent"/>
            <ProgressBar
				android:id="@+id/ProgressInviteUsers"
				style="@style/Widget.AppCompat.ProgressBar"
				android:layout_height="50dp"
				android:layout_width="50dp"
                android:visibility="gone"
				android:layout_gravity="center"
				android:indeterminate="true"/>
        </FrameLayout>
    </com.google.android.flexbox.FlexboxLayout>
</LinearLayout>
