<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/SwipeRefreshProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--Adding appbarheight will disable the auto hide scroll of 
        toolbar and Floating button from activity_main-->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/AppBarProfile"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"
            android:fitsSystemWindows="true">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/CollapsingToolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleMarginStart="48dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">
                <ImageView
                    android:id="@+id/img_profileCoverPhoto"
                    android:clickable="true"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="1"
                    android:onClick="OnClickProfileUserImage"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax"/>
                <ImageView
                    android:id="@+id/ProfileCoverCameraIcon"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:onClick="OnClickCoverPhoto"
                    android:src="@drawable/camera_graybg"
                    android:background="?android:attr/selectableItemBackground"
                    android:contentDescription="1"
                    android:layout_gravity="right|bottom"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="15dp"/>
                <android.support.v7.widget.Toolbar
                    android:id="@+id/profile_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:visibility="gone"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/NestedProfilePage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="3"
                android:numColumns="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:layout_row="0"
                    android:layout_column="0">
                    <TextView
                        android:id="@+id/lblProfileUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal|center_vertical"
                        android:textSize="32sp"
                        android:layout_marginTop="80dp"
                        android:tag="1003"
                        android:textStyle="bold"
                        android:text="Tokket App"         
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/lblUserTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal|center_vertical"
                        android:textSize="14sp"
                        android:layout_marginBottom="10dp"
                        android:visibility="gone"
                        android:textColor="@android:color/black"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/lblProfileUserDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|center"
                            android:layout_gravity="center"
                            android:textSize="14sp"
                            android:editable="false"
                            android:focusable="false"
                            android:padding="5dp"
                            android:tag="1001"
                            android:drawablePadding="10dp"
                            android:text="Tokket App"                               
                            android:background="?android:attr/selectableItemBackground"
                            android:textColor="@android:color/black"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center">
                            <TextView
                                android:id="@+id/lblProfileUrl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center_horizontal|center_vertical"
                                android:textSize="14sp"
                                android:editable="false"
                                android:padding="5dp"
                                android:maxLength="50"
                                android:tag="1002"
                                android:drawablePadding="10dp"
                                android:background="@android:color/transparent"
                                android:textColor="@android:color/black"/>
                            <TextView
                                android:id="@+id/lblProfileUrlEditIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center_horizontal|center_vertical"
                                android:textSize="14sp"
                                android:editable="false"
                                android:tag="1002"
                                android:text="edit"
                                android:drawablePadding="10dp"
                                android:background="?android:attr/selectableItemBackground"
                                android:textColor="@android:color/black"/>
                        </LinearLayout>
                        <Button
                            android:id="@+id/btnEditProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Edit Profile"
                            android:textAllCaps="false"
                            android:backgroundTint="@color/colorAccent"
                            android:textColor="@color/WHITE"/>
                    </LinearLayout>
                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        app:flexWrap="nowrap"
                        app:alignItems="center"
                        app:alignContent="center"
                        app:justifyContent="center"
                        app:layout_flexBasisPercent="100%">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_gravity="top"
                            app:layout_alignSelf="flex_start"
                            app:layout_flexBasisPercent="100%">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="COINS"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:contentDescription="coins"
                                android:layout_gravity="center"
                                android:textColor="@android:color/black"/>
                            <ImageView
                                android:id="@+id/gif_profileCoins"
                                android:layout_gravity="center"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:contentDescription="coins"
                                android:scaleType="fitCenter"/>
                            <TextView
                                android:id="@+id/TextProfileCoins"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Coins"
                                android:contentDescription="coins"
                                android:layout_gravity="center"
                                android:textColor="@android:color/black"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_flexBasisPercent="100%">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="LEVEL"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textColor="@android:color/black"/>
                            <TextView
                                android:id="@+id/TextLevelRank"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="L6"
                                android:textSize="13sp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textColor="@android:color/black"/>
                            <ImageView
                                android:id="@+id/ImgLevel"
                                android:layout_width="48dp"
                                android:layout_height="36dp"
                                android:contentDescription="patches"
                                android:layout_gravity="center"
                                android:scaleType="fitXY"/>
                            <TextView
                                android:id="@+id/TextLevelPoints"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="166 points"
                                android:layout_gravity="center"
                                android:textColor="@android:color/black"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_alignSelf="flex_start"
                            app:layout_flexBasisPercent="100%">
                            <TextView
                                android:id="@+id/TxtProfileWordCountry"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAllCaps="true"
                                android:text="COUNTRY"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="@android:color/black"/>
                            <TextView
                                android:id="@+id/TxtProfileCountrystate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAllCaps="true"
                                android:text="United States"
                                android:visibility="gone"
                                android:layout_gravity="center"
                                android:textSize="12sp"
                                android:textColor="@android:color/black"/>
                            <ImageView
                                android:layout_width="46dp"
                                android:layout_height="32dp"
                                android:id="@+id/imageProfileFlag"
                                android:layout_row="0"
                                android:layout_column="2"
                                android:layout_gravity="center"
                                android:scaleType="fitXY"/>
                        </LinearLayout>
                    </com.google.android.flexbox.FlexboxLayout>
                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        app:flexDirection="row"
                        app:flexWrap="nowrap"
                        app:alignItems="center"
                        app:alignContent="center"
                        app:justifyContent="center"
                        app:layout_flexBasisPercent="100%">
                        <Button
                            android:id="@+id/btnProfileAvatars"
                            android:layout_width="150dp"
                            android:layout_height="1dp"
                            android:visibility="gone"
                            android:layout_gravity="center"
                            android:text="Avatars"
                            android:textSize="14sp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorAccent"
                            android:backgroundTint="#c6ddfc"
                            app:layout_flexBasisPercent="100%"/>
                        <!--<Button
                            android:id="@+id/btnProfileBadges"
                            android:layout_width="150dp"
                            android:layout_height="55dp"
                            android:layout_gravity="center"
                            android:textSize="14sp"
                            android:text="Badge"
                            android:textAllCaps="false"
                            android:textColor="@color/com_facebook_messenger_blue"
                            android:backgroundTint="#c6ddfc"
                            app:layout_flexBasisPercent="50%"/>-->
                        <Button
                            android:id="@+id/btnProfileSubAccnts"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_gravity="center"
                            android:textSize="14sp"
                            android:textAllCaps="false"
                            android:visibility="gone"
                            android:textColor="@color/colorAccent"
                            android:backgroundTint="#c6ddfc"
                            app:layout_flexBasisPercent="100%"/>
                    </com.google.android.flexbox.FlexboxLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#c0c0c0"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:padding="15dp"
                    android:background="@android:color/white">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/RecyclerProfilePageToks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
                    <io.supercharge.shimmerlayout.ShimmerLayout
                        android:id="@+id/ShimmerProfilePageToks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <!-- Adding 5 rows of placeholders -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            android:gravity="center">
                            <include
                                layout="@layout/toks_placeholder_item" />
                            <include
                                layout="@layout/toks_placeholder_item" />
                            <include
                                layout="@layout/toks_placeholder_item" />
                            <include
                                layout="@layout/toks_placeholder_item" />
                            <include
                                layout="@layout/toks_placeholder_item" />
                        </LinearLayout>
                    </io.supercharge.shimmerlayout.ShimmerLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </GridLayout>
        </androidx.core.widget.NestedScrollView>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profileUserPhoto"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:onClick="OnClickProfileUserImage"
            android:contentDescription="0"
            app:civ_circle_background_color="@android:color/white"
            app:civ_border_width="3dp"
            app:civ_border_color="@android:color/white"
            app:layout_anchorGravity="center|bottom"
            app:layout_anchor="@+id/AppBarProfile"/>
        <FrameLayout
            android:id="@+id/FrameUserPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:layout_anchorGravity="center|right"
            app:layout_anchor="@+id/img_profileUserPhoto">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ProfileUserCameraIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="70dp"
                android:layout_marginRight="30dp"
                android:scaleType="centerCrop"
                android:contentDescription="0"
                android:onClick="OnClickProfileImage"
                android:src="@drawable/camera_graybg"
                android:background="?android:attr/selectableItemBackground"
                app:civ_border_width="2dp"
                app:civ_border_color="@android:color/white"/>
        </FrameLayout>
        <RelativeLayout
            android:id="@+id/ParentImageViewer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="ImgProfileImageView"
            android:visibility="gone">
            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/ImgProfileImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="false"
                android:clickable="false"
                android:contentDescription="ImgProfileImageView"
                android:background="@android:color/black"
                android:layout_gravity="center"/>
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="x"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:onClick="OnClickCloseImgView"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:textColor="@android:color/white"
                android:background="?android:attr/selectableItemBackground"
                android:backgroundTint="@android:color/black"/>
        </RelativeLayout>
        <View
            android:id="@+id/ViewDummyForTouch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/LinearCoinsToast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:visibility="gone"
            app:layout_anchorGravity="top|center"
            app:layout_anchor="@+id/gif_profileCoins">
            <TextView
                android:id="@+id/TextCoinsToast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:backgroundTint="#80000000"
                android:background="@drawable/tileview_layout"
                android:padding="10dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/TextNothingFound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:gravity="center"
            android:visibility="gone"/>

        <!--Progress-->
        <LinearLayout
            android:id="@+id/LinearProgress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:background="#80000000">
            <ProgressBar
                android:id="@+id/progressbarAddClassGroup"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_height="200dp"
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:indeterminate="true"/>
            <TextView
                android:id="@+id/progressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_gravity="center"/>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>