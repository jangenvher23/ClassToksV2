
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="?attr/actionBarSize"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:numColumns="0"
            android:rowCount="4">
            <!--Category-->
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:padding="10dp"
                android:layout_gravity="left"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black">
                </TextView>
                <TextView
                    android:id="@+id/lblTokBackTokCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_dark">
                    </TextView>
            </LinearLayout>
            <!--Tok Group-->
            <LinearLayout
                 android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:padding="10dp"
                android:layout_gravity="center"
                android:orientation="vertical">>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tok Group"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black">
                </TextView>
                <TextView
                    android:id="@+id/lblTokBackTokGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tok Group"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_dark">
                    </TextView>
            </LinearLayout>
            <!--Tok Type-->
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="right"
                android:padding="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tok Type"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black">
                </TextView>
                <TextView
                    android:id="@+id/lblTokBackTokType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tok Type"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_dark">
                    </TextView>
            </LinearLayout>
            <!--Primary Field Text-->
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="center_horizontal|fill_horizontal"
                android:padding="0dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/lblTokBackPrimaryField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingLeft="35dp"
                    android:paddingRight="35dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
            <!--Select number of blocks-->
            <LinearLayout
                android:id="@+id/linear_tokbackNumberBlocks"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="center_horizontal|fill_horizontal"
                android:padding="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select number of blocks"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingLeft="35dp"
                    android:paddingRight="35dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="#64137a"
                    android:textColor="@android:color/white"/>
                <Spinner
                    android:id="@+id/spinner_tokblocks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:textColor = "@android:color/black"
                    android:background="@drawable/rounded_edittext_white_bg"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_tokbackDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_row="3"
                android:layout_column="0"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
         </GridLayout>
    </androidx.core.widget.NestedScrollView>
    
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tokback_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#64137a">
        <ImageView
            android:src="@drawable/tokback_icon"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:scaleType="fitStart"/>
   </androidx.appcompat.widget.Toolbar>
</RelativeLayout>