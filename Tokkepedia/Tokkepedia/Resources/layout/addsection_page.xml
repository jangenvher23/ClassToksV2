<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/ScrollAddSectionForEntry"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="10dp">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="6"
            android:numColumns="3"
            android:padding="15dp"
            android:background="@color/placeholder_bg">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="left|center"
                android:layout_row="0"
                android:layout_column="0">
                <TextView
                    android:id="@+id/txtAddSectionMegaNumber"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center|center"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginRight="5dp"
                    android:backgroundTint="@android:color/black"
                    android:background="@drawable/linearboard_nopadding"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Section Title"
                    android:gravity="left"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
            
             <ImageView
                android:id="@+id/btnAddSection_img"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="right"
                android:scaleType="fitXY"
                android:onClick="OnClickAddTokImgDetail"
                android:background="@drawable/add_image_icon"/>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnSpan="2"
                app:counterEnabled="true"
                app:counterMaxLength="200"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
                <EditText
                    android:id="@+id/EdittxtAddSectionTitle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:hint="Title"
                    android:maxLength="200"
                    android:textColor = "@android:color/black"
                    android:background="@drawable/rounded_edittext_white_bg"/>
            </android.support.design.widget.TextInputLayout>
            <RelativeLayout
                android:id="@+id/RelativeAddSection"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_columnSpan="2"
                android:layout_row="2"
                android:layout_column="0"
                android:visibility="gone"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/btnAddSection_displayimg"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    android:background="@drawable/add_image_icon"/>
                <android.support.v7.widget.CardView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:cardCornerRadius="24dp"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    android:backgroundTint="@android:color/white"
                    android:thicknessRatio="1.9"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="104dp"
                    android:layout_marginBottom="15dp">
                    <ImageView
                        android:id="@+id/btnAddSection_deleteImg"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:onClick="OnDeleteImageDtl"
                        android:backgroundTint="@color/red_500"
                        android:src="@android:drawable/ic_delete"
                        android:background="?attr/selectableItemBackground"/>
                </android.support.v7.widget.CardView>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:text="Content"
                android:layout_marginRight="20dp"
                android:gravity="left|center"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_columnSpan="2"
                app:counterEnabled="true"
                app:counterMaxLength="150000"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
                <EditText
                    android:id="@+id/txtAddSectionContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:layout_columnSpan="2"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:hint="Content"
                    android:padding="10dp"
                    android:gravity="top"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLength="150000"
                    android:maxLines="6"
                    android:background="@drawable/rounded_edittext_white_bg"/>
            </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/btnAddSectionSave"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_row="5"
                android:layout_column="0"
                android:text="Add Section"
                android:maxLines="1"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="#007bff"/>
        </GridLayout>
    </ScrollView>
    <ScrollView
        android:id="@+id/ScrollAddSectionForView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="10dp"
        android:visibility="gone">
        <!--GridView for Viewing Purposes-->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="6"
            android:numColumns="3"
            android:padding="15dp"
            android:background="@android:color/transparent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="left|center"
                android:layout_row="0"
                android:layout_column="0">
                <TextView
                    android:id="@+id/txtAddSectionViewMegaNumber"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center|center"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginRight="5dp"
                    android:backgroundTint="@android:color/black"
                    android:background="@drawable/linearboard_nopadding"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/TxtDisplayAddSectionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:gravity="left"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="10dp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/RelativeAddSectionView"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_columnSpan="2"
                android:layout_row="2"
                android:layout_column="0"
                android:visibility="gone"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/btnAddSection_displayimgView"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_centerInParent="true"
                    android:onClick="OnClickImageView"
                    android:scaleType="fitXY"
                    android:background="@drawable/add_image_icon"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/txtAddSectionContentView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:layout_row="3"
                android:layout_column="0"
                android:text="Content"
                android:layout_marginRight="20dp"
                android:gravity="left|top"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>
        </GridLayout>
    </ScrollView>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"/>
    <!--Progress-->
    <LinearLayout
        android:id="@+id/linear_addsectionprogress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:background="#80000000">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_10"
            android:backgroundTint="#80000000"
            android:background="@drawable/tileview_layout">
            <TextView
                android:id="@+id/progressBarTextAddSection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_gravity="center"/>
            <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_height="86dp"
                android:layout_width="86dp"
                android:layout_gravity="center"
                android:indeterminate="true"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/RelativeImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@android:color/black">
        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/ImgImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="x"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:onClick="OnClickCloseImgView"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/red_500"/>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>