
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <androidx.appcompat.widget.Toolbar
        android:id="@+id/tokchoice_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#672d67">
        <ImageView
            android:src="@drawable/tokchoice"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:scaleType="fitCenter"/>
   </androidx.appcompat.widget.Toolbar>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:numColumns="1"
            android:rowCount="5">
            <TextView
                android:id="@+id/TextSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="14sp"
                android:textColor="@color/secondary_text"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_rowWeight="2"
                android:layout_row="1"
                android:layout_column="0">
                <TextView
                    android:id="@+id/TokChoiceCategory"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:text="Category: Acronym"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@android:color/black"
                    android:background="@drawable/linear_violetborder"/>
                <TextView
                    android:id="@+id/lblTokChoiceRoundDisplay"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:text="Tok # of #"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:background="@drawable/linear_violetborder"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0">
                <LinearLayout
                    android:id="@+id/LinearTokChoiceContents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="250dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/linear_violetborder"/>
                <ProgressBar
                    android:id="@+id/circleprogressTokChoiceDetails"
                    style="@style/Widget.AppCompat.ProgressBar"
                    android:layout_height="match_parent"
                    android:layout_width="66dp"
                    android:layout_gravity="center"
                    android:indeterminate="true"
                    android:visibility="gone"/>
            </FrameLayout>
            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_row="3"
                android:layout_column="0"
                app:flexWrap="wrap"
                app:alignItems="stretch"
                app:alignContent="stretch"
                app:justifyContent="center">
               <Button
                    android:id="@+id/BtnTokChoiceAnswer1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:minHeight="60dp"
                    android:backgroundTint="@color/primary_dark"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    app:layout_flexBasisPercent="49%"/>
                <Button
                    android:id="@+id/BtnTokChoiceAnswer2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:minHeight="60dp"
                    android:backgroundTint="@color/primary_dark"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    app:layout_flexBasisPercent="49%"/>
                <Button
                    android:id="@+id/BtnTokChoiceAnswer3"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:minHeight="60dp"
                    android:backgroundTint="@color/primary_dark"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    app:layout_flexBasisPercent="49%"/>
                <Button
                    android:id="@+id/BtnTokChoiceAnswer4"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:minHeight="60dp"
                    android:backgroundTint="@color/primary_dark"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    app:layout_flexBasisPercent="49%"/>
            </com.google.android.flexbox.FlexboxLayout>
            <Button
                android:id="@+id/BtnTokChoiceNext"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="@color/colorAccent"
                android:text="Next Tok"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_row="4"
                android:layout_column="0"/>
        </GridLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>