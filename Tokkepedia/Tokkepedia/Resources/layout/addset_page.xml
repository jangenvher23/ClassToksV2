
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--Hidden Controls fro MVVM-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <EditText
            android:id="@+id/TxtTokGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/TxtTokType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/TxtPrivacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="40dp">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:rowCount="14"
            android:numColumns="1"
            android:padding="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter the Set info"
                android:gravity="left"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_row="0"
                android:layout_column="0"
                android:textColor="@android:color/black"/>
            <!--Tok Group-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_column="0"
                android:layout_row="1"
                android:gravity="left"
                android:paddingBottom="10dp"
                android:layout_gravity="center_horizontal|fill_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tok Group"
                    android:gravity="right"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"/>
                <Spinner
                    android:id="@+id/txtAddSetTokGroup"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:textStyle="normal"
                    android:spinnerMode="dialog"
                    android:textSize="11sp"
                    android:padding="10dp"
                    android:maxLength="100"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor = "@android:color/black"
                    android:background="@drawable/rounded_edittext_white_bg"/>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/linear_border">
                    <TextView
                        android:id="@+id/lblAddSetDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="240dp"
                        android:paddingTop="8dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="8dp"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:background="@color/primary_dark"/>
                    <ImageView
                        android:layout_width="55dp"
                        android:layout_height="60dp"
                        android:background="@drawable/tokstargirl1"/>
                </LinearLayout>
            </LinearLayout>
            <!--Tok Type-->
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_column="0"
            android:layout_row="2"
            android:gravity="left"
            android:paddingBottom="10dp"
            android:layout_gravity="center_horizontal|fill_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tok Type"
                android:gravity="right"
                android:textSize="14sp"
                android:textColor="@android:color/black"/>
            <Spinner
                android:id="@+id/txtAddSetTokType"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:textStyle="normal"
                android:spinnerMode="dialog"
                android:textSize="11sp"
                android:padding="10dp"
                android:maxLength="100"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor = "@android:color/black"
                android:background="@drawable/rounded_edittext_white_bg"/>
            <TextView
                android:id="@+id/lblAddSetSample"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="left"
                android:textSize="14sp"
                android:inputType="textCapSentences|textMultiLine"
                android:background="@drawable/rounded_edittext_white_bg"
                android:textColor="@android:color/black"/>
        </LinearLayout>
            <!--Privacy-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_column="0"
                android:layout_row="3"
                android:gravity="left"
                android:paddingBottom="10dp"
                android:layout_gravity="center_horizontal|fill_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Privacy"
                    android:gravity="right"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"/>
                <Spinner
                    android:id="@+id/txtAddSetPrivacy"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:textStyle="normal"
                    android:spinnerMode="dialog"
                    android:textSize="11sp"
                    android:padding="10dp"
                    android:maxLength="100"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor = "@android:color/black"
                    android:background="@drawable/rounded_edittext_white_bg"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_column="0"
                android:layout_row="4"
                android:gravity="left"
                android:paddingBottom="10dp"
                android:layout_gravity="center_horizontal|fill_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:gravity="right"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"/>
                <com.google.android.flexbox.FlexboxLayout
		            android:layout_height="wrap_content"
		            android:layout_width="match_parent"
                    android:padding="5dp"
		            app:flexWrap="nowrap"
                    app:alignItems="center"
                    app:alignContent="center"
                    app:justifyContent="center"
                    app:layout_flexBasisPercent="78%">
                    <android.support.design.widget.TextInputLayout
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    app:hintEnabled="false"
					    app:counterEnabled="true"
					    app:counterMaxLength="35">
                        <EditText
                            android:id="@+id/txtAddSetName"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:textStyle="normal"
                            android:textSize="15sp"
                            android:padding="10dp"
                            android:maxLength="35"
                            android:textColor = "@android:color/black"
                            android:background="@drawable/rounded_edittext_white_bg"/>
                    </android.support.design.widget.TextInputLayout>
                    <ImageView
                        android:id="@+id/btnAddSetNameSmiley"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:tag="1"
                        android:src="@drawable/TOKKET_smiley_1B"
                        android:background="?attr/selectableItemBackground"
                        app:layout_flexBasisPercent="15%"
                        app:layout_alignSelf="flex_start"/>
                </com.google.android.flexbox.FlexboxLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_column="0"
                android:layout_row="5"
                android:gravity="left"
                android:paddingBottom="10dp"
                android:layout_gravity="center_horizontal|fill_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:gravity="right"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"/>
                <com.google.android.flexbox.FlexboxLayout
		            android:layout_height="wrap_content"
		            android:layout_width="match_parent"
                    android:padding="5dp"
                    app:flexWrap="nowrap"
                    app:alignItems="center"
                    app:alignContent="center"
                    app:justifyContent="center"
                    app:layout_flexBasisPercent="78%">
                    <android.support.design.widget.TextInputLayout
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    app:hintEnabled="false"
					    app:counterEnabled="true"
					    app:counterMaxLength="5000">
                        <EditText
                            android:id="@+id/txtAddSetDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="45dp"
                            android:padding="10dp"
                            android:textSize="15sp"
                            android:gravity="top"
                            android:inputType="textCapSentences|textMultiLine"
                            android:maxLength="5000"
                            android:maxLines="5"
                            android:background="@drawable/rounded_edittext_white_bg"/>
                    </android.support.design.widget.TextInputLayout>
                    <ImageView
                        android:id="@+id/btnAddSetDescriptionSmiley"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:tag="2"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/TOKKET_smiley_1B"
                        android:background="?attr/selectableItemBackground"
                        app:layout_flexBasisPercent="15%"
                        app:layout_alignSelf="flex_start"/>
                </com.google.android.flexbox.FlexboxLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_column="0"
                android:layout_row="6"
                android:gravity="left"
                android:paddingBottom="10dp"
                android:layout_gravity="center_horizontal|fill_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingBottom="10dp"
                    android:text="Select an image."
                    android:textSize="14sp"
                    android:textColor="@android:color/black"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/addset_imagebrowse"
                    android:scaleType="fitCenter"
                    android:background="@color/divider"/>
                <Button
                    android:id="@+id/btnAddSet_btnBrowseImage"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/mybutton"
                    android:text="Browse..."
                    android:padding="10dp"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/LinearAddSetTokMojiDummyMargin"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:layout_column="0"
                android:layout_row="7"
                android:visibility="gone"
                android:gravity="left"
                android:paddingBottom="10dp"
                android:layout_gravity="center_horizontal|fill_horizontal"/>
        </GridLayout>
    </ScrollView>
    <!--ToolBar-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/primary">
        <TextView
            android:id="@+id/btnAddSetCancel"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Cancel"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:textColor="@android:color/white">
        </TextView>
        <View
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="40dp"/>
        <TextView
            android:id="@+id/btnAddSetSave"
            android:background="?attr/selectableItemBackground"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="40dp"
            android:text="Add Set"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>
    </LinearLayout>
    <!--TOKMOJI-->
    <com.github.aakira.expandablelayout.ExpandableLinearLayout
        android:id="@+id/expandedAddSetTokMoji"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        app:ael_expanded="false"
		app:ael_duration="500"
		app:ael_interpolator="bounce"
		app:ael_orientation="vertical"
		android:padding="10dp">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/addsetRecyclerTokMojis"  
            android:layout_width="match_parent"  
            android:layout_height="300dp"
            android:layout_gravity="center"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    </com.github.aakira.expandablelayout.ExpandableLinearLayout>
    <!--Progress-->
    <LinearLayout
        android:id="@+id/linear_addsetprogress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:background="#80000000">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#90000000"
            android:background="@drawable/tileview_layout"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:id="@+id/progressBarTextAddSet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_gravity="center"/>
            <ProgressBar
                android:id="@+id/progressbarAddSet"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_height="86dp"
                android:layout_width="86dp"
                android:layout_gravity="center"
                android:indeterminate="true"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>