<androidx.coordinatorlayout.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
    android:background="@color/browser_actions_bg_grey">
	
	<androidx.core.widget.NestedScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
		<GridLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="15dp"
			android:rowCount="14"
			android:numColumns="1">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Post a copy to:"
				android:gravity="start"
				android:padding="10dp"
				android:textStyle="bold"
				android:textSize="16sp"
				android:textColor="@android:color/black"
				android:layout_row="0"
				android:layout_column="0"/>
            <LinearLayout
                android:id="@+id/linearPrivacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_row="1"
                android:layout_column="0">
                <CheckBox
                    android:id="@+id/chkPrivate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:buttonTint="@color/colorAccent"/>
                <TextView
                    android:id="@+id/txtChkPrivate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Private"
                    android:contentDescription="privacy"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@android:color/black"/>

                <CheckBox
                    android:id="@+id/chkGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:buttonTint="@color/colorAccent"/>
                <TextView
                    android:id="@+id/txtChkGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Group"
                    android:contentDescription="privacy"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@android:color/black"/>

                <CheckBox
                    android:id="@+id/chkPublic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:buttonTint="@color/colorAccent"/>
                <TextView
                    android:id="@+id/txtChkPublic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Public"
                    android:contentDescription="privacy"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginBottom="10dp">
                <TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Type (required field)"
					android:textSize="14sp"
					android:textColor="@android:color/black"/>
                <Spinner
					android:id="@+id/txtAddClassTokType"
                    style="@style/spinner_style"
					android:layout_width="match_parent"
					android:layout_height="45dp"
					android:textStyle="normal"
					android:spinnerMode="dropdown"
					android:textSize="14sp"
					android:layout_marginTop="5dp"
					android:layout_marginBottom="5dp"
					android:textColor="@android:color/black"/>
            </LinearLayout>
			<androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="3"
				android:layout_column="0">
                <Button
                    android:id="@+id/btnSelectColor"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Select Color"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/colorAccent"
                    android:textColor="@android:color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Selected Color:"   
                    android:gravity="start|center"
                    android:textSize="16sp"
                    android:layout_marginEnd="5dp"
                    android:textColor="@android:color/black"
                    app:layout_constraintEnd_toStartOf="@id/txtColor"/>
                <TextView
                    android:id="@+id/txtColor"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:background="@android:color/white"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_marginBottom="10dp">
                <TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Class Name (required field)"
					android:textSize="14sp"
					android:textColor="@android:color/black"/>
                <EditText
					android:id="@+id/txtAddClassTokClass"
					android:layout_width="fill_parent"
					android:layout_height="45dp"
					android:textStyle="normal"
					android:textSize="14sp"
					android:padding="10dp"
					android:maxLength="50"
					android:layout_marginTop="5dp"
					android:layout_marginBottom="5dp"
					android:textColor="@android:color/black"
					android:background="@drawable/rounded_edittext_white_bg"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_marginBottom="10dp">
                <TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Category (required field)"
					android:textSize="14sp"
					android:textColor="@android:color/black"/>
                <EditText
					android:id="@+id/txtAddClassTokCategory"
					android:layout_width="fill_parent"
					android:layout_height="45dp"
					android:textStyle="normal"
					android:textSize="14sp"
					android:padding="10dp"
					android:maxLength="50"
					android:layout_marginTop="5dp"
					android:layout_marginBottom="5dp"
					android:textColor="@android:color/black"
					android:background="@drawable/rounded_edittext_white_bg"/>
            </LinearLayout>
			<Button
				android:layout_width="160dp"
				android:layout_height="40dp"
				android:layout_column="0"
				android:layout_row="6"
				android:textAllCaps="false"
				android:text="+ Add Tile Sticker"
				android:onClick="OnAddTokSticker"
				android:textStyle="normal"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_row="7"
                android:layout_column="0"
                android:layout_marginBottom="10dp">
                <TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Primary (required field)"
					android:textSize="14sp"
					android:textColor="@android:color/black"/>
				<com.google.android.material.textfield.TextInputLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:hintEnabled="false"
					app:counterEnabled="true"
					app:counterMaxLength="50">
					<EditText
						android:id="@+id/txtAddClassTokPrimary"
						android:layout_width="match_parent"
						android:layout_height="45dp"
						android:textStyle="normal"
						android:textSize="14sp"
						android:padding="10dp"
						android:maxLength="50"
						android:textColor="@android:color/black"
						android:background="@drawable/rounded_edittext_white_bg"/>
				</com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/LinearAddClassTokSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_row="8"
                android:layout_column="0"
                android:layout_marginBottom="10dp">
                <TextView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="Secondary (required field)"
				    android:textSize="14sp"
				    android:textColor="@android:color/black"/>
                <EditText
				    android:id="@+id/txtAddClassTokSecondary"
				    android:layout_width="fill_parent"
				    android:layout_height="45dp"
				    android:textStyle="normal"
				    android:textSize="14sp"
				    android:padding="10dp"
				    android:maxLength="50"
				    android:layout_marginTop="5dp"
				    android:layout_marginBottom="5dp"
				    android:textColor="@android:color/black"
				    android:background="@drawable/rounded_edittext_white_bg"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/LinearAddClassTokDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_row="9"
                android:layout_column="0">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/RecyclerAddClassTok"  
                    android:layout_width="match_parent"  
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
                <Button
				    android:id="@+id/btnAddClassTokAddDetail"
				    android:layout_width="150dp"
				    android:layout_height="40dp"
				    android:layout_column="0"
				    android:layout_row="9"
				    android:layout_gravity="center"
				    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/colorAccent"
				    android:background="@drawable/mybutton"
				    android:text="+ Add Detail"
				    android:textAllCaps="false"
				    android:onClick="OnClickAddDetail"
				    android:textColor="@android:color/white"/>
            </LinearLayout>
            <LinearLayout
				android:id="@+id/linearNotes"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_column="0"
				android:layout_row="10">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="left"
					android:paddingTop="10dp"
					android:paddingBottom="10dp"
					android:text="Notes (2000 characters max)"
					android:textSize="14sp"
					android:textColor="@android:color/black"/>
				<EditText
					android:id="@+id/txtAddClassTokNotes"
					android:layout_width="match_parent"
					android:layout_height="200dp"
					android:textStyle="normal"
					android:textSize="14sp"
					android:padding="10dp"
					android:gravity="top"
					android:maxLength="2000"
					android:textColor="@android:color/black"
					android:background="@drawable/rounded_edittext_white_bg"/>
			</LinearLayout>
            <LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_column="0"
				android:layout_row="11"
				android:padding="15dp">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="left"
					android:paddingTop="10dp"
					android:paddingBottom="10dp"
					android:text="Image"
					android:textSize="15sp"
					android:textStyle="bold"
					android:textColor="@android:color/black"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="left"
					android:paddingBottom="10dp"
					android:text="Select an image."
					android:textSize="14sp"
					android:textColor="@android:color/black"/>
				<ImageView
					android:layout_width="match_parent"
					android:layout_height="100dp"
                    android:background="@drawable/linearboard_nopadding"
					android:id="@+id/addclasstok_imagebrowse"
					android:scaleType="fitCenter"/>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="100dp"
					android:orientation="horizontal"
					android:layout_gravity="center"
					android:gravity="center">
					<Button
						android:id="@+id/btnAddClassTok_btnBrowseImage"
						android:layout_width="130dp"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:layout_marginTop="10dp"
                        android:backgroundTint="@color/colorAccent"
						android:background="@drawable/mybutton"
						android:text="Browse..."
						android:padding="10dp"
						android:textAllCaps="false"
						android:onClick="OnClickAddTokImgMain"
						android:textColor="@android:color/white"/>
					<Button
						android:id="@+id/btnAddClassTokRemoveImgMain"
						android:layout_width="130dp"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:layout_marginTop="10dp"
                        android:backgroundTint="@color/colorAccent"
						android:background="@drawable/mybutton"
						android:text="Remove Image"
						android:visibility="gone"
						android:padding="10dp"
						android:textAllCaps="false"
						android:onClick="OnClickRemoveTokImgMain"
						android:textColor="@android:color/white"/>
				</LinearLayout>
			</LinearLayout>
        </GridLayout>
	</androidx.core.widget.NestedScrollView>

    <!--ToolBar-->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:orientation="horizontal"
		android:background="@color/colorAccent">

		<TextView
			android:id="@+id/btnAddClassTokCancel"
			android:layout_width="0dp"
			android:layout_weight="2"
			android:layout_height="40dp"
			android:gravity="center_horizontal|center_vertical"
			android:textSize="14sp"
			android:textStyle="bold"
			android:text="Cancel"
			android:paddingLeft="15dp"
			android:background="?attr/selectableItemBackground"
			android:clickable="true"
			android:textColor="@android:color/white"/>
		<TextView
			android:id="@+id/btnAddClassTokSave"
			android:background="?attr/selectableItemBackground"
			android:layout_width="0dp"
			android:layout_weight="10"
			android:layout_height="40dp"
			android:text="Add Class Tok"
			android:layout_gravity="right"
			android:gravity="right|center"
			android:paddingRight="20dp"
			android:textSize="16sp"
			android:textStyle="bold"
			android:textColor="@android:color/white"/>
	</LinearLayout>

	<TextView
		android:id="@+id/classGroupName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="43dp"
		android:layout_marginLeft="30dp"
		android:text="Type"
		android:visibility="gone"
		android:textSize="14sp"
		android:textColor="@android:color/black"/>

	<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
		android:visibility="gone"
		tools:visibility="visible">
		<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:padding="2dp"
			android:layout_gravity="bottom">
			<Button
				android:id="@+id/btnPreviewTile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
				android:text="Preview Tile"
				android:textSize="16sp"
				android:textColor="@color/WHITE"
				android:textAllCaps="false"
				android:backgroundTint="@color/colorAccent"/>
		</LinearLayout>
	</FrameLayout>

    <RelativeLayout
        android:id="@+id/ParentImageViewer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="ImgProfileImageView"
        android:visibility="gone">
        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/ImgProfileImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:clickable="false"
            android:contentDescription="ImgProfileImageView"
            android:background="@android:color/black"
            android:layout_gravity="center"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="x"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:onClick="OnClickCloseImgView"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textColor="@android:color/white"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:backgroundTint="@android:color/black"/>
    </RelativeLayout>

    <!--Progress-->
	<LinearLayout
		android:id="@+id/LinearProgress_addclasstok"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:gravity="center"
		android:visibility="gone"
		android:background="#80000000">
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="@dimen/padding_10"
            android:backgroundTint="#80000000"
            android:background="@drawable/tileview_layout">
			<TextView
				android:id="@+id/progressBarTextAddClassTok"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Loading..."
				android:textSize="16sp"
				android:textColor="@android:color/white"
				android:gravity="center"
				android:layout_gravity="center"/>
			<ProgressBar
				android:id="@+id/progressbarAddClassTok"
				style="@style/Widget.AppCompat.ProgressBar"
				android:layout_height="86dp"
				android:layout_width="86dp"
				android:layout_gravity="center"
				android:indeterminate="true"/>
		</LinearLayout>
	</LinearLayout>

    <LinearLayout
        android:id="@+id/LinearToast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="50dp"
        android:visibility="gone"
        app:layout_anchorGravity="top|center"
        app:layout_anchor="@+id/linearPrivacy">
        <TextView
            android:id="@+id/TextToast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:backgroundTint="#80000000"
            android:background="@drawable/tileview_layout"
            android:padding="10dp"
            android:textSize="14sp"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>