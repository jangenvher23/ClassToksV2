
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="40dp">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:rowCount="14"
            android:numColumns="1"
            android:padding="15dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="0">
                <Button
                    android:id="@+id/btnSelectColor"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Select Color"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/colorAccent"
                    android:textColor="@android:color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Selected Color:"   
                    android:gravity="start|center"
                    android:textSize="16sp"
                    android:layout_marginEnd="5dp"
                    android:textColor="@android:color/black"
                    app:layout_constraintEnd_toStartOf="@id/txtColor"/>
                <TextView
                    android:id="@+id/txtColor"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:background="@android:color/white"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
		        android:id="@+id/classGroupName"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"     
		        android:layout_marginBottom="10dp"             
                android:layout_row="1"
                android:visibility="gone"
		        android:text="Type"
		        android:textSize="14sp"
		        android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter the Set info"   
                android:gravity="left"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_row="2"
                android:layout_column="0"/>

            <!--Tok Group-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_column="0"
                android:layout_row="3"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:paddingBottom="10dp"
                android:layout_gravity="center_horizontal|fill_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type"
                    android:gravity="right"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"/>
                <Spinner
                    android:id="@+id/txtAddClassSetTokGroup"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:textStyle="normal"
                    android:spinnerMode="dialog"
                    android:textSize="11sp"
                    android:padding="10dp"
                    android:maxLength="100"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor = "@android:color/black"
                    android:background="@drawable/rounded_edittext_white_bg"/>
            </LinearLayout>
            <!--Tok Type-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_column="0"
                android:layout_row="4"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:paddingBottom="10dp"
                android:layout_gravity="center_horizontal|fill_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Class Name (required field)"
                    android:gravity="right"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"/>
                <android.support.design.widget.TextInputLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:hintEnabled="false"
					app:counterEnabled="true"
					app:counterMaxLength="25">
                    <EditText
                        android:id="@+id/EditAddClassSetClassName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="25"
                        android:padding="10dp"
                        android:gravity="left"
                        android:textSize="14sp"
                        android:inputType="textCapSentences|textMultiLine"
                        android:background="@drawable/rounded_edittext_white_bg"
                        android:textColor="@android:color/black"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <!--Privacy-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_column="0"
                android:layout_row="5"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:paddingBottom="10dp"
                android:layout_gravity="center_horizontal|fill_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Privacy"
                    android:gravity="right"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"/>
                <Spinner
                    android:id="@+id/txtAddClassSetPrivacy"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:textStyle="normal"
                    android:spinnerMode="dialog"
                    android:textSize="11sp"
                    android:padding="10dp"
                    android:maxLength="100"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor = "@android:color/black"
                    android:background="@drawable/rounded_edittext_white_bg"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_column="0"
                android:layout_row="6"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:paddingBottom="10dp"
                android:layout_gravity="center_horizontal|fill_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name (required field)"
                    android:gravity="right"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"/>
                <android.support.design.widget.TextInputLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:hintEnabled="false"
					app:counterEnabled="true"
					app:counterMaxLength="35">
                    <EditText
                        android:id="@+id/txtAddClassSetName"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textStyle="normal"
                        android:textSize="15sp"
                        android:padding="10dp"
                        android:maxLength="35"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@android:color/black"
                        android:background="@drawable/rounded_edittext_white_bg"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_column="0"
                android:layout_row="7"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:paddingBottom="10dp"
                android:layout_gravity="center_horizontal|fill_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:gravity="right"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"/>
                <android.support.design.widget.TextInputLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:hintEnabled="false"
					app:counterEnabled="true"
					app:counterMaxLength="5000">
                    <EditText
                        android:id="@+id/txtAddClassSetDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="45dp"
                        android:padding="10dp"
                        android:textSize="15sp"
                        android:gravity="top"
                        android:inputType="textCapSentences|textMultiLine"
                        android:maxLength="5000"
                        android:maxLines="4"
                        android:background="@drawable/rounded_edittext_white_bg"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/LinearGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_column="0"
                android:layout_row="8"
                android:layout_marginTop="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Group:"
                        android:gravity="right"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/TextGroupName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="right"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"/>
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/RecyclerGroupList"  
                    android:layout_width="match_parent"  
                    android:layout_height="300dp"
                    android:clipToPadding="false"
                    android:paddingBottom="?android:attr/actionBarSize"
                    android:scrollbarStyle="outsideOverlay"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:divider="@android:color/transparent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_column="0"
                android:layout_row="9"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:paddingBottom="10dp"
                android:layout_gravity="center_horizontal|fill_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingBottom="10dp"
                    android:text="Select a PNG or JPEG icon, max size 500.00 KB (optional)"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/addClassset_imagebrowse"
                    android:scaleType="fitCenter"
                    android:background="@color/divider"/>
                <Button
                    android:id="@+id/btnAddClassSet_btnBrowseImage"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/mybutton"
                    android:text="Browse..."
                    android:padding="10dp"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </GridLayout>
    </ScrollView>
    <!--ToolBar-->
    <LinearLayout
        android:id="@+id/LinearClassSetToolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/colorAccent">
        <TextView
            android:id="@+id/btnAddClassSetCancel"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Cancel"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:textColor="@android:color/white">
        </TextView>
        <View
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="40dp"/>
        <TextView
            android:id="@+id/btnAddClassSetSave"
            android:background="?attr/selectableItemBackground"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="40dp"
            android:text="Add Set"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>
    </LinearLayout>
    <!--Progress-->
    <LinearLayout
        android:id="@+id/linear_addClasssetprogress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#80000000"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_10"
            android:backgroundTint="#80000000"
            android:background="@drawable/tileview_layout">
            <TextView
                android:id="@+id/progressBarTextAddClassSet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_gravity="center"/>
            <ProgressBar
                android:id="@+id/progressbarAddClassSet"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_height="86dp"
                android:layout_width="86dp"
                android:layout_gravity="center"
                android:indeterminate="true"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>