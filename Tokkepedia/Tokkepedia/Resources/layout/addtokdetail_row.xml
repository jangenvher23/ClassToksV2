<LinearLayout 
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <GridLayout
        android:id="@+id/gridAddTokMegaDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="2"
        android:numColumns="1"
        android:padding="5dp"
        android:background="@android:color/transparent">
        <LinearLayout
            android:id="@+id/addtoklinear_lblparent"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center">
            <Button
                android:id="@+id/btnAddTok_deletedtlField1"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:tag="0"
                android:padding="10dp"
                android:onClick="OnDelete"
                android:background="@android:drawable/ic_delete"/>
            <TextView
                android:id="@+id/lblAddTokDetail1"
                android:layout_width="0dp"
                android:layout_weight="1.50"
                android:layout_height="wrap_content"
                android:text="Detail 1"
                android:gravity="left"
                android:textSize="13sp"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/lblAddTokImageStr"
                android:layout_width="0dp"
                android:layout_weight="1.50"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text=""
                android:gravity="left"
                android:textSize="13sp"
                android:textColor="@android:color/black"/>
            <ImageView
                android:id="@+id/btnAddtokdtl_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:onClick="OnClickAddTokImgDetail"
                android:background="@drawable/add_image_icon"/>
            <Button
                android:id="@+id/btnDeltokdtl_img"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:visibility="gone"
                android:onClick="OnDeleteImageDtl"
                android:background="@android:drawable/ic_delete"/>
            <TextView
                android:id="@+id/lblAddTokDetailEng1"
                android:layout_width="0dp"
                android:layout_weight="1.75"
                android:layout_height="wrap_content"
                android:text="English Translation"
                android:gravity="left"
                android:visibility="gone"
                android:textSize="13sp"
                android:textColor="@android:color/black"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="0">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="9"
                app:hintEnabled="false"
                app:counterEnabled="true"
                app:counterMaxLength="500"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
                <EditText
                    android:id="@+id/txtAddTokDetailField"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textStyle="normal"
                    android:textSize="13sp"
                    android:padding="10dp"
                    android:tag="0"
                    android:maxLength="500"
                    android:textColor = "@android:color/black"
                    android:background="@drawable/rounded_edittext_white_bg"/>
            </com.google.android.material.textfield.TextInputLayout>
            <ImageView
                android:id="@+id/btnAddTokDetailSmiley"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:contentDescription="detail"
                android:src="@drawable/TOKKET_smiley_1B"
                android:background="?attr/selectableItemBackground"/>
            <CheckBox
                android:id="@+id/chkAddTokChkDtlField"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:buttonTint="@color/colorAccent"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:onClick="OnCheckAddTok"
                android:textColor="@android:color/black"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputlayoutDetailEnglishTrans"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="10"
                app:hintEnabled="false"
                android:visibility="gone"
                app:counterEnabled="true"
                app:counterMaxLength="500"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
                <EditText
                    android:id="@+id/txtAddTokDetailFieldEngTrans"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textStyle="normal"
                    android:textSize="13sp"
                    android:padding="10dp"
                    android:tag="0"
                    android:maxLength="500"
                    android:textColor = "@android:color/black"
                    android:background="@drawable/rounded_edittext_white_bg"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </GridLayout>
 </LinearLayout>