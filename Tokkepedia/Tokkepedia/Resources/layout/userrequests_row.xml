
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <com.google.android.flexbox.FlexboxLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
        android:padding="7dp"
        android:background="@drawable/linearboard_nopadding"
		app:flexWrap="nowrap"
        app:alignItems="center"
        app:alignContent="center"
        app:justifyContent="center"
        app:layout_flexBasisPercent="100%">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:orientation="horizontal"
            app:layout_flexBasisPercent="100%">
            <android.support.v7.widget.CardView
                android:layout_width="38dp"
                android:layout_height="38dp"
                app:cardCornerRadius="24dp"
                android:innerRadius="0dp"
                android:shape="ring"
                android:layout_gravity="left|center"
                android:clickable="true"
                android:thicknessRatio="1.9"
                app:layout_flexBasisPercent="7%">
                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:id="@+id/ImgRequestUserphoto"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scaleType="fitXY"/>
            </android.support.v7.widget.CardView>
            <TextView
                android:id="@+id/TextUserRequestName"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:gravity="left|center"
                android:textSize="12sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="5dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:textColor="@android:color/black"
                app:layout_flexBasisPercent="50%"/>
            <TextView
                android:id="@+id/LabelUserOwner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone"
                android:text="Owner"
                android:padding="5dp"
                android:layout_marginLeft="15dp"
                android:background="@color/colorAccent"
                android:textColor="@android:color/white"
                app:layout_flexBasisPercent="50%"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LinearButtons"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            app:layout_flexBasisPercent="100%">
            <Button
                android:id="@+id/BtnUserRequestAccept"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="Accept"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:backgroundTint="@color/colorAccent"/>
            <Button
                android:id="@+id/BtnUserRequestDecline"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="Decline"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:backgroundTint="#dc3545"/>
        </LinearLayout>
    </com.google.android.flexbox.FlexboxLayout>
</LinearLayout>