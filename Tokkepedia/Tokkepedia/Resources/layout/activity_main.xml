<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">                       
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbarMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            android:fitsSystemWindows="true">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/CollapsingToolBarMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|enterAlways"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleMarginStart="48dp"
                app:expandedTitleMarginEnd="64dp">
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/main_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:minHeight="?attr/actionBarSize"
                    android:background="@color/primary"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark"
                    app:layout_collapseMode="pin"
                    app:layout_scrollFlags="scroll|enterAlways|snap"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:orientation="horizontal">
                        <ImageView
                            android:src="@drawable/tokkepedia_logo"
                            android:layout_width="120dp"
                            android:layout_height="32dp"
                            android:layout_marginStart="10dp"
                            android:scaleType="fitStart"
                            android:id="@+id/imageViewTokkepediaLogoText"/>
                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="11sp"
                            android:justificationMode="inter_word"
                            android:text="The social and playable knowledge sharing app"/>
                    </LinearLayout>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <Tokkepedia.LockableViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@color/primary"
                app:tabMaxWidth="0dp"
                app:tabGravity="fill"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/primary_text"
                app:tabTextColor="@color/primary_text"
                app:tabTextAppearance="@style/MyCustomTabText">
            </com.google.android.material.tabs.TabLayout>
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_AddTok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:src="@drawable/addtokicon"
            android:clickable="true"
            android:layout_marginBottom="45dp"
            android:scaleType="fitXY"
            app:borderWidth="0dp"
            app:useCompatPadding="true"
            app:layout_behavior="@string/fab_scroll_translation_autohide_behavior"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:id="@+id/main_navigation_view"
        app:theme="@style/ThemeOverlay.AppCompat.navTheme"
        app:headerLayout="@layout/header_sidemenu">

        <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
            <ScrollView
                android:id="@+id/ScrollNormalToks"
                android:layout_marginTop="165dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:rowCount="6"
                    android:numColumns="1">
                    <LinearLayout
                        android:id="@+id/LinearTokGroups"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:onClick="OnClickCustomMenu"
                        android:padding="5dp"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_row="0"
                        android:layout_column="0">
                        <ImageView                     
                            android:id="@+id/tokgroup_b"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/tokgroup_b"
                            android:layout_marginRight="20dp"
                            android:scaleType="fitXY"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tok Groups"
                            android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/LinearSet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:onClick="OnClickCustomMenu"
                        android:padding="5dp"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_row="1"
                        android:layout_column="0">
                        <ImageView                          
                            android:id="@+id/play_icon"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/play_icon"
                            android:layout_marginRight="20dp"
                            android:scaleType="fitXY"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Set"
                            android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/LinearClassToks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:onClick="OnClickCustomMenu"
                        android:padding="5dp"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_row="2"
                        android:layout_column="0">
                        <ImageView                        
                            android:id="@+id/class_b"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/class_b"
                            android:layout_marginRight="20dp"
                            android:scaleType="fitXY"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Class Toks"
                            android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/LinearSettings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:onClick="OnClickCustomMenu"
                        android:padding="5dp"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_row="3"
                        android:layout_column="0">
                        <ImageView                        
                            android:id="@+id/settings_black_36dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/settings_black_36dp"
                            android:scaleType="fitXY"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Settings"
                            android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/LinearQuoteTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:onClick="OnClickQuotePage"
                        android:padding="5dp"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_row="4"
                        android:layout_column="0">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView                          
                                android:id="@+id/tokgroup_bQuote"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginRight="20dp"
                                android:src="@drawable/tokgroup_b"
                                android:scaleType="fitXY"/>
                            <TextView
                                android:id="@+id/lblQuoteTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="QOTH - Share"
                                android:textSize="15sp"/>
                        </LinearLayout>
                   
			            <ProgressBar
				                android:id="@+id/progressQuote"
				                style="@style/Widget.AppCompat.ProgressBar"
				                android:layout_height="25dp"
				                android:layout_width="25dp"
				                android:layout_gravity="center"
				                android:indeterminate="true"
				                android:layout_centerInParent="true"/>    
                    
                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/lblQuote"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="25dp"
                                android:text="Diseases can rarely be eliminated through early diagnosis or good treatment, but prevention can eliminate disease."
                                android:textSize="15sp"
                                android:padding="5dp"
                                android:textStyle="italic"
                                android:gravity="center_horizontal"/>                            
                        </ScrollView>                        
                    
                        <TextView
                            android:id="@+id/lblQuoteAuthor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:text="Denis Parsons Burkitt"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            android:gravity="center_horizontal"/>

                        <TextView
                            android:id="@+id/lblQuoteCategory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:text="Category: Disease Prevention amazing"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            android:gravity="center_horizontal"/>
                    </LinearLayout>
                    <Button
                        android:id="@+id/BtnMenuAddTok"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:onClick="OnClickCustomMenu"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"                                  
                        android:drawableLeft="@drawable/addtokicon"     
                        android:background="@drawable/mybutton"            
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:gravity="center"
                        android:text="+ Add Tok"
                        android:textAllCaps="false"
                        android:textSize="15sp"
                        android:textColor="@android:color/white"
                        android:layout_row="5"
                        android:layout_column="0"/>   
                </GridLayout>
            </ScrollView>

            <ScrollView
                android:id="@+id/ScrollClassToks"
                android:visibility="gone"
                android:layout_marginTop="165dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:rowCount="7"
                    android:numColumns="1">
                    <LinearLayout                    
                        android:id="@+id/leftmenu_classtok_ClassSets"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:onClick="OnClickClassMenu"
                        android:padding="5dp"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_row="0"
                        android:layout_column="0">
                        <ImageView
                            android:id="@+id/imageViewClassSets"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/class_sets_b"
                            android:layout_marginRight="20dp"
                            android:scaleType="fitXY"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Class Sets"
                            android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout                    
                        android:id="@+id/leftmenu_classtok_ClassGroups"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:onClick="OnClickClassMenu"
                        android:padding="5dp"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_row="1"
                        android:layout_column="0">
                        <ImageView
                            android:id="@+id/imageViewClassGroup"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/class_group_b"
                            android:layout_marginRight="20dp"
                            android:scaleType="fitXY"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Class Groups"
                            android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/leftmenu_classtok_Invites"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:onClick="OnClickClassMenu"
                        android:padding="5dp"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_row="2"
                        android:layout_column="0">
                        <ImageView
                            android:id="@+id/imageViewClassNotification"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/ic_notification_black48"
                            android:scaleType="fitXY"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Invites"
                            android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout          
                        android:id="@+id/leftmenu_classtok_Guide"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:onClick="OnClickClassMenu"
                        android:padding="5dp"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_row="3"
                        android:layout_column="0">
                        <ImageView
                            android:id="@+id/imageViewClassGuide"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/guide_b"
                            android:scaleType="fitXY"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Guide"
                            android:textSize="15sp"/>
                    </LinearLayout>

                        <LinearLayout               
                        android:id="@+id/leftmenu_classtok_Folders"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:onClick="OnClickClassMenu"
                        android:padding="5dp"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_row="4"
                        android:layout_column="0">
                        <ImageView
                            android:id="@+id/imageViewClassFolder"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/class_folder_b"
                            android:scaleType="fitXY"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Folders"
                            android:textSize="15sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearClassTokSettings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:onClick="OnClickCustomMenu"
                        android:padding="5dp"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_row="6"
                        android:layout_column="0">
                        <ImageView                        
                            android:id="@+id/imageViewClassSettings"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/settings_black_36dp"
                            android:scaleType="fitXY"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Settings"
                            android:textSize="15sp"/>
                    </LinearLayout>

                    <LinearLayout                      
                        android:id="@+id/leftmenu_classtok_Tokkepedia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:onClick="OnClickClassMenu"
                        android:visibility="gone"
                        android:padding="5dp"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_row="6"
                        android:layout_column="0">
                        <ImageView                        
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/left_arrow_icon"
                            android:scaleType="fitXY"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Back to Tokkepedia"
                            android:textSize="15sp"/>
                    </LinearLayout>
                </GridLayout>
            </ScrollView>

            <ImageView
                android:id="@+id/imageBulb"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="10dp"
                android:onClick="onClickBulb"
                android:src="@drawable/bulb_outlined"
                android:scaleType="fitCenter"
                android:background="@drawable/ripple_circle"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>