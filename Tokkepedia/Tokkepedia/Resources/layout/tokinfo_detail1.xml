<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="left"
    android:layout_gravity="left">
    <TextView
       android:id="@+id/lbl_detail"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="14sp"
       android:textColor="@android:color/black"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="97dp"
        android:gravity="center"
        android:onClick="OnClickImageToView"
        android:layout_gravity="center_horizontal|fill_horizontal"
        android:id="@+id/tokinfo_imgdetail"
        android:scaleType="fitCenter"/>
    <LinearLayout
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:gravity="left"
       android:paddingLeft="15dp"
       android:layout_gravity="center_horizontal|fill_horizontal"
       android:layout_centerInParent="true"
       android:orientation="horizontal"
       android:id="@+id/linear_Reactions">
        <Button
            android:id="@+id/tokinfo_btnAccurate"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="check"
            android:onClick="OnClickAddReaction"
            android:contentDescription="accurate"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_marginRight="10dp"
            android:textSize="20sp"
            android:background="?attr/selectableItemBackground"
            android:textColor="@android:color/holo_green_dark"/>
        <Button
            android:id="@+id/tokinfo_btnInaccurate"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="times"
            android:onClick="OnClickInaccurate"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:background="?attr/selectableItemBackground"
            android:textColor="@color/red_500"/>
    </LinearLayout>
    <LinearLayout
       android:id="@+id/linearTokInfo_detailComment"
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:gravity="left"
       android:layout_marginLeft="15dp"
       android:padding="4dp"
       android:visibility="gone"
       android:orientation="horizontal"
       android:backgroundTint="@color/btnDisable"
       android:background="@drawable/linearboard_nopadding">
        <EditText
            android:id="@+id/EditTokInfo_detailcomment"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textStyle="normal"
            android:textSize="14sp"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:textColor = "@android:color/black"
            android:background="@drawable/rounded_edittext_white_bg"/>
        <Button
            android:id="@+id/btnTokInfo_detailComment"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Comment"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:onClick="OnClickAddReaction"
            android:contentDescription="inaccurate"
            android:backgroundTint="@color/red_500"/>
    </LinearLayout>
</LinearLayout>