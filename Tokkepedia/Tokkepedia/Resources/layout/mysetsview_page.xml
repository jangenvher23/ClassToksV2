
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.journaldev.tablayoutviewpager.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        android:fitsSystemWindows="true"
        android:background="@android:color/white">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|enterAlways"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white">
                <TextView
                    android:id="@+id/lblMySetViewTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SAMPLE PERSON"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:id="@+id/lblMySetViewTokGroup"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="SAMPLE PERSON"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/secondary_text"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="|"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/secondary_text"/>
                    <TextView
                        android:id="@+id/lblMySetViewTokType"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="SAMPLE PERSON"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/secondary_text"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/lblMySetViewDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DESCRIPTION"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/secondary_text"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="TOKS"
                        android:gravity="right"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/secondary_text"/>
                    <TextView
                        android:id="@+id/lblMySetViewToksCnt"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:gravity="left"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageButton
                        android:id="@+id/imgbtnSetsTokCards"
                        android:layout_width="130dp"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center|top"
                        android:src="@drawable/tokcards"/>
                    <ImageButton
                        android:id="@+id/imgbtnSetsTokMatch"
                        android:layout_width="130dp"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center|top"
                        android:src="@drawable/tokmatch"/>
                    <ImageButton
                        android:id="@+id/imgbtnSetsTokChoice"
                        android:layout_width="130dp"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:visibility="gone"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center|top"
                        android:src="@drawable/tokchoice"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
        <include
            android:id="@+id/tabLayoutMySetsViewToks"
            layout="@layout/tabLayout_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpagerMySetsViewToks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:padding="10dp"
        android:weightSum="2">
        <Button
            android:id="@+id/btnMySetsViewAdd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="+ Add Toks"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="#007bff"/>
        <Button
            android:id="@+id/btnMySetsViewRemove"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="- Remove Toks"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="#dc3545"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>