
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@android:color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Quote"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quote"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:padding="5dp"/>
            <EditText
                android:id="@+id/editQuote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:padding="10dp"
                android:hint="Enter Quote..."
                android:background="@drawable/rounded_edittext_white_bg"/>
            <TextView
                android:id="@+id/txtQuoteError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red_500"
                android:textSize="13sp"
                android:paddingLeft="5dp"
                android:visibility="gone"/>
        </LinearLayout>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meaning/Source"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:padding="5dp"/>
            <EditText
                android:id="@+id/editMeaning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:padding="10dp"
                android:hint="Enter Meaning/Source"
                android:background="@drawable/rounded_edittext_white_bg"/>
            <TextView
                android:id="@+id/txtMeaningError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red_500"
                android:textSize="13sp"
                android:paddingLeft="5dp"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:padding="5dp"/>
            <EditText
                android:id="@+id/editCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:padding="10dp"
                android:hint="Enter Category"
                android:background="@drawable/rounded_edittext_white_bg"/>
            <TextView
                android:id="@+id/txtCategoryError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red_500"
                android:textSize="13sp"
                android:paddingLeft="5dp"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
             <Button
                android:id="@+id/btnAddQuote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Add Quote"
                android:padding="10dp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/colorAccent"/>
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Cancel"
                android:padding="10dp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/red_500"/>
            <Button
                android:id="@+id/btnPreview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Preview"
                android:padding="10dp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/colorAccent"/>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>