<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account Type"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/black"/>
            <Spinner
			    android:id="@+id/SpinnerSignupAccountType"
			    android:layout_width="fill_parent"
			    android:layout_height="45dp"
			    android:textStyle="normal"
			    android:spinnerMode="dialog"
                android:layout_marginBottom="10dp"
			    android:textSize="14sp"
			    android:padding="10dp"
			    android:textColor="@android:color/black"
			    android:background="@drawable/rounded_edittext_white_bg"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="5dp"
                android:background="@color/placeholder_bg"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@color/icons"
                    android:padding="15dp"
                    android:rowCount="12"
                    android:numColumns="0">
                    <LinearLayout
                        android:id="@+id/LinearSignUpGroupType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Group Type"
                            android:textSize="14sp"
                            android:layout_marginBottom="10dp"
                            android:textColor="@android:color/black"/>
                        <Spinner
			                android:id="@+id/SpinnerSignupGroupType"
			                android:layout_width="fill_parent"
			                android:layout_height="45dp"
			                android:textStyle="normal"
			                android:spinnerMode="dialog"
			                android:textSize="14sp"
			                android:padding="10dp"
                            android:layout_marginBottom="10dp"
			                android:textColor="@android:color/black"
			                android:background="@drawable/rounded_edittext_white_bg"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/LinearSignUpGroupOwnerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:id="@+id/TextGroupTypeHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Account Owner's First Name"
                            android:textSize="14sp"
                            android:layout_marginBottom="10dp"
                            android:textColor="@android:color/black"/>
                        <EditText
                            android:id="@+id/EditSignupOwnerName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:textSize="14sp"
                            android:padding="10dp"
                            android:textColor="@android:color/black"
                        android:background="@drawable/rounded_edittext_white_bg"/>
                    </LinearLayout>
                    <!--Display Name-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_column="0"
                        android:layout_row="2"
                        android:gravity="left"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center_horizontal|fill_horizontal">
                        <TextView
                            android:id="@+id/TextHeaderDisplayName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Display Name"
                            android:gravity="left"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"/>
                        <EditText
                            android:id="@+id/txtSignupDisplayName"
                            android:layout_width="fill_parent"
                            android:layout_height="45dp"
                            android:textStyle="normal"
                            android:textSize="14sp"
                            android:padding="10dp"
                            android:maxLength="100"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColor = "@android:color/black"
                            android:background="@drawable/rounded_edittext_white_bg"/>
                    </LinearLayout>
                    <!--Birthday-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_column="0"
                        android:layout_row="3"
                        android:gravity="left"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center_horizontal|fill_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Birthday"
                            android:gravity="right"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"/>
                        <TextView
                            android:id="@+id/txtSignupBday"
                            android:layout_width="fill_parent"
                            android:layout_height="45dp"
                            android:textStyle="normal"
                            android:textSize="14sp"
                            android:clickable="true"
                            android:inputType="date"
                            android:padding="10dp"
                            android:maxLength="100"
                            android:hint="dd/mm/yyyy"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColor = "@android:color/black"
                            android:background="@drawable/rounded_edittext_white_bg"/>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txtSignupBdayErrorMssg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorTextAppearance="@style/error_appearance"/>
                    </LinearLayout>
                    <!--Country-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_column="0"
                        android:layout_row="4"
                        android:layout_marginBottom="5dp"
                        android:gravity="left"
                        android:layout_gravity="center_horizontal|fill_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Country"
                            android:gravity="right"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"/>

                        <Spinner
                            android:id="@+id/txtSignupCountry"
                            android:layout_width="fill_parent"
                            android:layout_height="45dp"
                            android:textStyle="normal"
                            android:spinnerMode="dialog"
                            android:textSize="11sp"
                            android:padding="10dp"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColor = "@android:color/black"
                            android:background="@drawable/rounded_edittext_white_bg"/>
                    </LinearLayout>
                    <!--State-->
                    <LinearLayout
                        android:id="@+id/linearState"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_column="0"
                        android:layout_row="5"
                        android:layout_marginBottom="5dp"
                        android:gravity="left"
                        android:layout_gravity="center_horizontal|fill_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="State"
                            android:gravity="right"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"/>
                        <Spinner
                            android:id="@+id/txtSignupState"
                            android:layout_width="fill_parent"
                            android:layout_height="45dp"
                            android:textStyle="normal"
                            android:textSize="11sp"
                            android:spinnerMode="dialog"
                            android:padding="10dp"
                            android:maxLength="100"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColor = "@android:color/black"
                            android:background="@drawable/rounded_edittext_white_bg"/>
                    </LinearLayout>
                    <!--Email-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_column="0"
                        android:layout_row="6"
                        android:layout_marginBottom="5dp"
                        android:gravity="left"
                        android:layout_gravity="center_horizontal|fill_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:gravity="right"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"/>
                        <EditText
                            android:id="@+id/txtSignupEmail"
                            android:layout_width="fill_parent"
                            android:layout_height="45dp"
                            android:textStyle="normal"
                            android:textSize="14sp"
                            android:inputType="textEmailAddress"
                            android:padding="10dp"
                            android:maxLength="100"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColor = "@android:color/black"
                            android:background="@drawable/rounded_edittext_white_bg"/>
                    </LinearLayout>
                    <!--Password-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_column="0"
                        android:layout_row="7"
                        android:layout_marginBottom="5dp"
                        android:gravity="left"
                        android:layout_gravity="center_horizontal|fill_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Password"
                            android:gravity="right"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"/>
                        <EditText
                            android:id="@+id/txtSignupPassword"
                            android:layout_width="fill_parent"
                            android:layout_height="45dp"
                            android:textStyle="normal"
                            android:textSize="14sp"
                            android:padding="10dp"
                            android:maxLength="100"
                            android:inputType="textPassword"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColor = "@android:color/black"
                            android:background="@drawable/rounded_edittext_white_bg"/>
                    </LinearLayout>
                    <!--Confirm Password-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_column="0"
                        android:layout_row="8"
                        android:layout_marginBottom="5dp"
                        android:gravity="left"
                        android:layout_gravity="center_horizontal|fill_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Confirm Password"
                            android:gravity="right"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"/>
                        <EditText
                            android:id="@+id/txtSignupConfirmPassword"
                            android:layout_width="fill_parent"
                            android:layout_height="45dp"
                            android:textStyle="normal"
                            android:textSize="14sp"
                            android:padding="10dp"
                            android:maxLength="100"
                            android:inputType="textPassword"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColor = "@android:color/black"
                            android:background="@drawable/rounded_edittext_white_bg"/>
                    </LinearLayout>
                    <!--Image-->
                    <LinearLayout
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:orientation="vertical"
				        android:layout_column="0"
				        android:layout_row="9"
				        android:padding="15dp">
				        <TextView
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:gravity="left"
					        android:paddingBottom="10dp"
					        android:text="Select an image."
					        android:textSize="14sp"
					        android:textColor="@android:color/black"/>
				        <ImageView
					        android:layout_width="match_parent"
					        android:layout_height="100dp"
					        android:id="@+id/ImgSignupPhoto"
					        android:scaleType="fitCenter"/>
				        <LinearLayout
					        android:layout_width="match_parent"
					        android:layout_height="100dp"
					        android:orientation="horizontal"
					        android:layout_gravity="center"
					        android:gravity="center">
					        <Button
						        android:id="@+id/btnSignupBrowseImg"
						        android:layout_width="130dp"
						        android:layout_height="wrap_content"
						        android:layout_gravity="center"
						        android:layout_marginTop="10dp"
						        android:backgroundTint="@color/primary_dark"
						        android:text="Browse..."
						        android:padding="10dp"
						        android:textAllCaps="false"
						        android:onClick="OnClickAddTokImgMain"
						        android:textColor="@android:color/white"/>
					        <Button
						        android:id="@+id/btnSignupRemoveImg"
						        android:layout_width="130dp"
						        android:layout_height="wrap_content"
						        android:layout_gravity="center"
						        android:layout_marginTop="10dp"
						        android:backgroundTint="@color/red_500"
						        android:text="Remove Image"
						        android:visibility="gone"
						        android:padding="10dp"
						        android:textAllCaps="false"
						        android:onClick="OnClickRemoveTokImgMain"
						        android:textColor="@android:color/white"/>
				        </LinearLayout>
			        </LinearLayout>
                    <!--Terms of Service-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_column="0"
                        android:layout_row="10"
                        android:layout_marginBottom="5dp"
                        android:gravity="left"
                        android:layout_gravity="center_horizontal|fill_horizontal">
                        <CheckBox
                            android:id="@+id/chkSignupTermsofService"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="I agree to the "
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"/>
                        <TextView
                            android:id="@+id/lblSignupTermsofService"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Terms of Service."
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorAccent"/>
                    </LinearLayout>
                    <Button
                        android:id="@+id/btnSignupIndividual"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_column="0"
                        android:textSize="15sp"
                        android:layout_row="11"
                        android:textAllCaps="false"
                        android:layout_below="@id/chkSignupTermsofService"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/mybutton"
                        android:text="Register"
                        android:textColor="@android:color/white"/>
                </GridLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <!--Progress-->
	<LinearLayout
		android:id="@+id/LinearProgress_Signup"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:gravity="center"
        android:visibility="gone"
		android:background="#80000000">
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_10"
            android:backgroundTint="#90000000"
            android:background="@drawable/tileview_layout">
            <TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Loading..."
				android:textSize="16sp"
				android:textColor="@android:color/white"
				android:gravity="center"
				android:layout_gravity="center"/>
			<ProgressBar
				style="@style/Widget.AppCompat.ProgressBar"
				android:layout_height="86dp"
				android:layout_width="86dp"
				android:layout_gravity="center"
				android:indeterminate="true"/>
		</LinearLayout>
	</LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>