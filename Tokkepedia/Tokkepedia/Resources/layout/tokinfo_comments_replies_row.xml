
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/ViewrepliesTopLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c0c0c0"/>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:rowCount="3"
                android:numColumns="1">
                <com.google.android.flexbox.FlexboxLayout
		            android:layout_height="wrap_content"
		            android:layout_width="match_parent"
                    android:layout_row="0"
                    android:layout_column="0"
		            app:flexWrap="nowrap"
                    app:alignItems="center"
                    app:alignContent="center"
                    app:justifyContent="center"
                    app:layout_flexBasisPercent="100%">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:layout_gravity="left|center"
                        app:layout_flexBasisPercent="100%">
                        <android.support.v7.widget.CardView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            app:cardCornerRadius="24dp"
                            android:layout_centerHorizontal="true"
                            android:innerRadius="0dp"
                            android:layout_gravity="center"
                            android:shape="ring"
                            android:clickable="true"
                            android:thicknessRatio="1.9">
                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:id="@+id/imgreply_userphoto"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:onClick="OnClickTokInfoCommenter"
                                android:focusableInTouchMode="true"
                                android:scaleType="fitXY"/>
                        </android.support.v7.widget.CardView>
                        <TextView
                            android:id="@+id/lbl_replynameuser"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:gravity="left|center"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="15dp"
                            android:onClick="OnClickTokInfoCommenter"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:textColor="@android:color/black"/>
                        <TextView
                            android:id="@+id/lbl_replydate"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:gravity="left|center"
                            android:layout_marginLeft="15dp"
                            android:textSize="11sp"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/lblCommentPopUpMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:scaleType="fitXY"
                        android:onClick="OnClickPopUpMenuComments"
                        android:text="⋮"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        app:layout_flexBasisPercent="10%"
                        android:textColor="@android:color/black"/>
                </com.google.android.flexbox.FlexboxLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_row="1"
                    android:layout_column="0">
                    <TextView
                        android:id="@+id/lblReplyRowContentEllip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:padding="3dp"
                        android:textSize="13sp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/lblReplyRowContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:padding="3dp"
                        android:textSize="13sp"
                        android:visibility="gone"
                        android:textColor="@android:color/black"/>
                    <LinearLayout
                        android:id="@+id/LinearEditComment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">
                        <EditText
                            android:id="@+id/EditCommentRowContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:text="Sample"
                            android:padding="5dp"
                            android:textSize="13sp"
                            android:textColor="@android:color/black"
                            android:background="@drawable/linear_border"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="right">
                             <Button
                                android:id="@+id/BtnCancelComment"
                                android:layout_width="60dp"
                                android:layout_height="35dp"
                                android:text="Cancel"
                                android:onClick="OnClickCancelComment"
                                android:textAllCaps="false"
                                android:padding="3dp"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:backgroundTint="@color/divider"/>
                            <Button
                                android:id="@+id/BtnUpdateComment"
                                android:layout_width="60dp"
                                android:layout_height="35dp"
                                android:text="Update"
                                android:onClick="OnClickUpdateComment"
                                android:layout_gravity="right"
                                android:textAllCaps="false"
                                android:padding="3dp"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:backgroundTint="@color/colorAccent"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:id="@+id/btnViewMoreCloseReply"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_marginLeft="40dp"
                    android:textAllCaps="false"
                    android:text="View more"
                    android:visibility="gone"
                    android:padding="3dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:backgroundTint="@android:color/white"
                    android:background="?attr/selectableItemBackground"/>
            </GridLayout>
            <View
                android:id="@+id/ViewrepliesBottomLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:background="#c0c0c0"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <!--Progress-->
    <FrameLayout
        android:id="@+id/frame_addsetprogress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#80000000">
        <ProgressBar
            android:id="@+id/progressbar"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_height="96dp"
            android:layout_width="96dp"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/progressBarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_gravity="center"/>
    </FrameLayout>
</FrameLayout>