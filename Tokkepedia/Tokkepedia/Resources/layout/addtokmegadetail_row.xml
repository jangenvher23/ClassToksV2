<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
     <GridLayout
        android:id="@+id/gridAddTokMegaDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="5"
        android:numColumns="3"
        android:padding="15dp"
        android:background="@color/placeholder_bg">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left|center"
            android:layout_row="0"
            android:layout_column="0">
            <TextView
                android:id="@+id/txtAddTokMegaNumber"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center|center"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginRight="5dp"
                android:backgroundTint="@android:color/black"
                android:background="@drawable/linearboard_nopadding"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Section Title"
                android:gravity="left|center"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="right">
            <ImageView
                android:id="@+id/btnAddtokmegadtl_img"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:layout_marginRight="10dp"
                android:onClick="OnClickAddTokImgDetail"
                android:background="@drawable/add_image_icon"/>
            <Button
                android:id="@+id/btnAddTokMega_deletedtlField1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:onClick="OnDelete"
                android:visibility="gone"
                android:background="@android:drawable/ic_delete"/>
        </LinearLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputlayoutAddTokMegaTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            app:counterEnabled="true"
            app:counterMaxLength="200"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <EditText
                android:id="@+id/EdittxtAddTokMegaTitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle="normal"
                android:textSize="16sp"
                android:padding="10dp"
                android:hint="Title"
                android:maxLength="200"
                android:textColor = "@android:color/black"
                android:background="@drawable/rounded_edittext_white_bg"/>
        </android.support.design.widget.TextInputLayout>
        <RelativeLayout
            android:id="@+id/RelaveAddTokMegaImg"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_columnSpan="2"
            android:layout_row="2"
            android:layout_column="0"
            android:visibility="gone"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/btnAddtokmegadtl_displayimg"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:background="@drawable/add_image_icon"/>
            <android.support.v7.widget.CardView
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:cardCornerRadius="24dp"
                android:innerRadius="0dp"
                android:shape="ring"
                android:backgroundTint="@android:color/white"
                android:thicknessRatio="1.9"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="104dp"
                android:layout_marginBottom="15dp">
                <ImageView
                    android:id="@+id/btnAddTokMega_deleteImg"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:onClick="OnDeleteImageDtl"
                    android:backgroundTint="@color/red_500"
                    android:src="@android:drawable/ic_delete"
                    android:background="?attr/selectableItemBackground"/>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:text="Content"
            android:layout_marginRight="20dp"
            android:gravity="left|center"
            android:textSize="18sp"
            android:textColor="@android:color/black"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputlayoutAddTokMegaContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2"
            app:counterEnabled="true"
            app:counterMaxLength="150000"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <EditText
                android:id="@+id/txtAddTokMegaContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:layout_columnSpan="2"
                android:textSize="16sp"
                android:layout_weight="1"
                android:padding="10dp"
                android:hint="Content"
                android:gravity="top"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLength="150000"
                android:maxLines="6"
                android:background="@drawable/rounded_edittext_white_bg"/>
        </android.support.design.widget.TextInputLayout>
    </GridLayout>
</LinearLayout>