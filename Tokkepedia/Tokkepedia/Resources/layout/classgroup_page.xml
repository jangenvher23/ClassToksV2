<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="15dp">
        <ImageView
            android:clickable="true"
            android:layout_height="200dp"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:onClick="OnClickImageGroup"
            android:id="@+id/ImgGroup"/>
        <LinearLayout
            android:id="@+id/LinearRequestSent"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="right"
            android:visibility="gone">
            <TextView
                android:id="@+id/TextCheckRequestSent"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="check-circle"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@android:color/holo_green_dark"/>
            <TextView
                android:id="@+id/TextRequestStatus"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Request Sent"
                android:gravity="center"
                android:textSize="14sp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/placeholder_bg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/TextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/TextSchool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="School"
                android:textSize="14sp"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/TextDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="14sp"
                android:textColor="@android:color/black"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/placeholder_bg"/>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@android:color/white"
            app:layout_scrollFlags="scroll|enterAlways"
            app:tabGravity="fill"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/colorAccent"
            app:tabTextColor="@android:color/black"
            app:tabTextAppearance="@style/MyCustomTabText13"/>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpagerClassGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_AddClassGrouppage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:padding="15dp"
        android:src="@drawable/addtokicon"
        android:clickable="true"
        android:backgroundTint="@color/colorAccent"
        android:scaleType="fitXY"
        app:borderWidth="0dp"
        app:useCompatPadding="true"
        app:layout_behavior="@string/fab_scroll_translation_autohide_behavior"/>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorAccent"/>
    <!--Progress-->
	<LinearLayout
		android:id="@+id/LinearProgress_ClassGroup"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:gravity="center"
        android:visibility="gone"
		android:background="#80000000">
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:backgroundTint="#90000000"
            android:background="@drawable/tileview_layout">
            <TextView
                android:id="@+id/TextProgressStatus"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Loading..."
				android:textSize="16sp"
				android:textColor="@android:color/white"
				android:gravity="center"
				android:layout_gravity="center"/>
			<ProgressBar
				style="@style/Widget.AppCompat.ProgressBar"
				android:layout_height="86dp"
				android:layout_width="86dp"
				android:layout_gravity="center"
				android:indeterminate="true"/>
		</LinearLayout>
	</LinearLayout>
    <RelativeLayout
        android:id="@+id/LinearImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@android:color/black">
        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/ImgImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="x"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:onClick="OnClickCloseImgView"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/red_500"/>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>